---
// Experiencia: timeline breve
const experience = [
  { role: "Desarrollador Python Data Science", org: "Oracle Next Education", years: "2023-2025" },
  { role: "Desarrollador FullStack Freelance", org: "Proyectos personales", years: "2022-2025" },
  { role: "Diseñador Gráfico", org: "Freelance", years: "2015-2022" }
];
---
<section class="experience">
  <h2>Experiencia</h2>
  <ul class="exp-list">
    {experience.map(exp => (
      <li>
        <strong>{exp.role}</strong> <span>- {exp.org} ({exp.years})</span>
      </li>
    ))}
  </ul>
</section>
<style>
.experience {
  padding: 3rem 1rem;
  background: #f8faff;
  text-align: center;
}
.exp-list {
  list-style: none;
  padding: 0;
  margin: 2rem auto 0 auto;
  max-width: 600px;
}
.exp-list li {
  background: #e3f0ff;
  margin-bottom: 1rem;
  padding: 1rem;
  border-radius: 6px;
  font-weight: 500;
  text-align: left;
}
.exp-list strong {
  color: #2563eb;
}
</style>