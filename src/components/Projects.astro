  text-align: left;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.project-img {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 1rem;
}
.project-tech {
  display: block;
  margin: 0.7rem 0;
  font-size: 0.95rem;
  color: #2563eb;
  font-weight: 500;
}
.project-links {
  margin-top: auto;
}
.btn {
  display: inline-block;
  margin-right: 0.5rem;
  padding: 0.5rem 1.2rem;
  background: #2563eb;
  color: #fff;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  transition: background 0.2s;
}
.btn:hover {
  background: #1e40af;
}
</style>